[colors]

;; Rosé-Pine Colorscheme: 
;; Base
background = #1f1d2e
;; Highlight Med
background-alt = #44415a
;; Text
foreground = #e0def4
;; Rose
primary = #ea9a97
;; Gold
secondary = #f6c177
secondary-light = #3f3f3f

iris = #c4a7e7
gold = #f6c177
pine = #31748f
foam = #9ccfd8
love = #eb6f92
rose = #ebbcba
text = #e0def4

;; Muted
disabled = #6e6a86

;; Basic colors
;; White
white = #ffffff
;; Black 
black = #000000
black-transparent = #00000000

[bar/example]
width = 100%
height = 26pt
radius = 6

; dpi = 96

background = ${colors.background}
foreground = ${colors.foreground}

scroll-up = "#i3.prev"
scroll-down = "#i3.next"

line-size = 3pt

border-size = 4pt
border-color = ${colors.black-transparent}

padding-left = 1
padding-right = 1

module-margin = 1

separator = | 
separator-foreground = ${colors.disabled}

font-0 = CaskaydiaCove Nerd Font:size=13;2.5
font-1 = "Noto Color Emoji:size=10:antialias=true:autohint=true:scale=10;1"

modules-left = date weather i3 
modules-center = xwindow 
modules-right = mnt root memory cpu wlan eth pulseaudio 

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

; wm-restack = generic
; wm-restack = bspwm
wm-restack = i3

; override-redirect = true

[module/i3]
type = internal/i3

pin-workspaces = true
strip-ws-numbers = true
enable-click = true
enable-scroll = true
wrapping-scroll = false
reverse-scrolling = true
fuzzy-match = true

ws-icon-0 = 1;
ws-icon-1 = 2;󰈹
ws-icon-2 = 3;󰓓
ws-icon-3 = 4;󰙯
ws-icon-4 = 5;󰇄
ws-icon-default =

format = <label-state>
label-mode = 
label-mode-padding = 1
label-mode-background = #e60053

label-focused = %icon%
label-focused-foreground = ${colors.white}
label-focused-background = ${colors.secondary-light}
label-focused-underline = ${colors.rose}
label-focused-padding = 1

label-visible = %icon%
label-visible-padding = 1

label-urgent = %icon%
label-urgent-foreground = ${colors.white}
label-urgent-background = ${colors.love} 
label-urgent-padding = 1

label-unfocused = %icon%
label-unfocused-padding = 1

[module/xworkspaces]
type = internal/xworkspaces

label-active = %name%
label-active-background = ${colors.background-alt}
label-active-underline= ${colors.primary}
label-active-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.love}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

#[module/mnt]
#type = internal/fs
#interval = 25
#warn-percentage = 70

#mount-0 = /mnt

#label-mounted = %{F#F0C674}/mnt 󱛟%{F-} %free%

#label-unmounted = %mountpoint% not mounted
#label-unmounted-foreground = ${colors.disabled}

[module/root]
type = internal/fs
interval = 25
warn-percentage = 70

mount-0 = /

label-mounted = %{F#eb6f92}󱛟%{F-} %free% 
 
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.disabled}

[module/pulseaudio]
type = internal/pulseaudio
sink-input = true

format-volume-prefix = "󱀞 "
format-volume-prefix-foreground = ${colors.primary}
format-volume = <label-volume>

label-volume = %percentage%%

label-muted = muted
label-muted-foreground = ${colors.disabled}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

label-layout = %layout%
label-layout-foreground = ${colors.primary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-foreground = ${colors.background}
label-indicator-background = ${colors.secondary}
click-right = pavucontrol

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foam}
label = %percentage_used%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.iris}
label = %percentage:2%%

[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = %{F#F0C674}󰈀%{F#707880} disconnected

[module/wlan]
inherit = network-base
interface-type = wireless
label-connected = %{F#F0C674}󰖩%{F-} %signal%%

[module/eth]
inherit = network-base
interface-type = wired
label-connected = %{F#F0C674}󰈀%{F-} %signal%

[module/date]
type = internal/date
interval = 1

format-prefix = " "
format-prefix-foreground = ${colors.foam}

date-alt = %I:%M %p
date = %I:%M %p   %a, %b %e 

label = %date%
label-foreground = ${colors.foam}

[module/weather]
type = custom/script
exec = ~/.config/polybar/scripts/weather_script.sh
interval = 5 ; Update every 10 minutes

[settings]
screenchange-reload = true
pseudo-transparency = true

